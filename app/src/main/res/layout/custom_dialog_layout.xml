<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_40"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginRight="@dimen/space_40"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_40px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/space_40"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/permissionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/space_40"
        android:layout_marginRight="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_20">

        <Button
            android:id="@+id/negativeBtn"
            android:layout_width="@dimen/space_240"
            android:layout_height="@dimen/space_92"
            android:background="@drawable/negative_button_bg"
            android:text="拒绝"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/positiveBtn"
            android:layout_width="@dimen/space_240"
            android:layout_height="@dimen/space_92"
            android:layout_marginStart="@dimen/space_60"
            android:layout_marginLeft="@dimen/space_60"
            android:background="@drawable/positive_button_bg"
            android:text="开启"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_100"
    android:background="@color/colorWhiteSmoke"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/leftLinearLayout"
            android:layout_width="@dimen/space_0"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10">

            <ImageView
                android:id="@+id/navigation_title_bar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space_10"
                android:padding="@dimen/space_10"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/navigation_title_bar_back_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="返回"
                android:textColor="@color/color_dl"
                android:textSize="@dimen/font_size_30px"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centerLinearLayout"
            android:layout_width="@dimen/space_0"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:singleLine="true"
                android:text="安全支付"
                android:textSize="@dimen/font_size_24px"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/space_0"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="end">

            <LinearLayout
                android:id="@+id/rightLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/space_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/space_10"
                android:paddingEnd="@dimen/space_10">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray" />

</LinearLayout>